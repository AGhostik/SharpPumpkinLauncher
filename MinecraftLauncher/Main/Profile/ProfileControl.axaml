<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:profile="clr-namespace:MinecraftLauncher.Main.Profile"
             xmlns:publicData="clr-namespace:Launcher.PublicData;assembly=Launcher"
             xmlns:properties="clr-namespace:MinecraftLauncher.Properties"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="profile:ProfileViewModel"
             x:CompileBindings="True"
             x:Class="MinecraftLauncher.Main.Profile.ProfileControl">
    <UserControl.Resources>
        <DataTemplate x:Key="VersionTemplate" DataType="publicData:Version">
            <Grid ColumnDefinitions="Auto, *">
                <Border 
                    Grid.Column="0" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    CornerRadius="3"
                    Margin="0, 0, 5, 0">
                    <TextBlock
                        Margin="5, 0, 5, 0"
                        VerticalAlignment="Center"
                        Text="{Binding Type}"/>
                </Border>
                <TextBlock 
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{Binding Id}"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ForgeVersionTemplate" DataType="publicData:ForgeVersion">
            <Grid ColumnDefinitions="Auto, Auto, Auto, *">
                <Border 
                    Grid.Column="0" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    CornerRadius="3"
                    Margin="0, 0, 5, 0">
                    <TextBlock
                        Margin="5, 0, 5, 0"
                        VerticalAlignment="Center"
                        Text="{x:Static properties:Localization.Forge}"/>
                </Border>
                <Border 
                    Grid.Column="1" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    CornerRadius="3"
                    IsVisible="{Binding IsLatest}"
                    Margin="0, 0, 5, 0">
                    <TextBlock
                        Margin="5, 0, 5, 0"
                        VerticalAlignment="Center"
                        Text="Latest"/>
                </Border>
                <Border 
                    Grid.Column="2" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    CornerRadius="3"
                    IsVisible="{Binding IsRecommended}"
                    Margin="0, 0, 5, 0">
                    <TextBlock
                        Margin="5, 0, 5, 0"
                        VerticalAlignment="Center"
                        Text="Recommended"/>
                </Border>
                <TextBlock 
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Text="{Binding Id}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid RowDefinitions="*, Auto, Auto">
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Grid 
                Margin="5"
                RowDefinitions="Auto, 5, Auto"
                ColumnDefinitions="Auto, 5, *">
                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Text="{x:Static properties:Localization.ProfileName}"/>
                <TextBox 
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="{Binding ProfileName}" />
                
                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Text="{x:Static properties:Localization.PlayerName}"/>
                <TextBox 
                    Grid.Column="2"
                    Grid.Row="2"
                    Text="{Binding PlayerName}" />
            </Grid>
            
            <ComboBox
                Margin="5"
                PlaceholderText="{x:Static properties:Localization.MinecraftVersion}"
                PlaceholderForeground="gray"
                HorizontalAlignment="Stretch"
                VirtualizationMode="Simple"
                Items="{Binding Versions}"
                SelectedItem="{Binding SelectedVersion}"
                ItemTemplate="{StaticResource VersionTemplate}" />

            <ComboBox
                Margin="5"
                PlaceholderText="{x:Static properties:Localization.ForgeVersion}"
                PlaceholderForeground="gray"
                HorizontalAlignment="Stretch"
                VirtualizationMode="Simple"
                IsVisible="{Binding Forge}"
                IsEnabled="{Binding SelectedVersion, Converter={x:Static ObjectConverters.IsNotNull}}"
                Items="{Binding ForgeVersions}"
                SelectedItem="{Binding SelectedForgeVersion}"
                ItemTemplate="{StaticResource ForgeVersionTemplate}" />
            
            <Grid
                HorizontalAlignment="Center"
                IsVisible="{Binding Forge}"
                ColumnDefinitions="Auto, 5, Auto">
                <TextBlock
                    Grid.Column="0"
                    FontSize="10"
                    VerticalAlignment="Center"
                    Text="{x:Static properties:Localization.PleaseSupportForgeAuthors}"/>
                <TextBox 
                    Grid.Column="2"
                    IsReadOnly="True"
                    FontSize="10"
                    TextWrapping="NoWrap"
                    Padding="3"
                    MinHeight="0"
                    Text="www.patreon.com/MinecraftForge" />
            </Grid>
        </StackPanel>
        <Grid 
            Grid.Row="1" 
            Margin="5"
            RowDefinitions="Auto, Auto">
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal" 
                HorizontalAlignment="Center">
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Latest}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Latest}" />
                </Grid>
                <Grid Width="10" />
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Release}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Release}" />
                </Grid>
                <Grid Width="10" />
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Snapshot}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Snapshot}" />
                </Grid>
                <Grid Width="10" />
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Beta}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Beta}" />
                </Grid>
                <Grid Width="10" />
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Alpha}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Alpha}" />
                </Grid>
            </StackPanel>
            
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal" 
                HorizontalAlignment="Center">
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0" 
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Forge}" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding Forge}" />
                </Grid>
                <Grid Width="10" />
                <Grid ColumnDefinitions="Auto, Auto">
                    <TextBlock 
                        Grid.Column="0"
                        IsEnabled="False"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Text="{x:Static properties:Localization.Custom}" />
                    <CheckBox Grid.Column="1" IsEnabled="False" IsChecked="{Binding Custom}" />
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Margin="5,0,5,5" ColumnDefinitions="*, *">
            <Button
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="{x:Static properties:Localization.SaveProfile}"
                Command="{Binding SaveProfileCommand}"/>
            <Button
                Grid.Column="1"
                Margin="5"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="{x:Static properties:Localization.Cancel}"
                Command="{Binding CloseProfileControlCommand}"/>
        </Grid>
    </Grid>
</UserControl>
